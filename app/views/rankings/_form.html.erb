<%= form_for(@ranking, html: { class: "form-horizontal"}) do |f| %>
  <% if @ranking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ranking.errors.count, "error") %> prohibited this ranking from being saved:</h2>

      <ul>
      <% @ranking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- <input name="auth_key" type="hidden" value="CaXaNMZoZ3" /> -->

  <div class="control-group">
    <%= f.label :userid , class: "control-label"%>
    <div class="controls"><%= f.number_field :userid %></div>
  </div>
 <div class="control-group">
    <%= f.label :name , class: "control-label" %>
    <div class="controls"><%= f.text_field :name %></div>
  </div>
<div class="control-group">
    <%= f.label :winpercentage , class: "control-label" %>
    <div class="controls"><%= f.number_field :winpercentage , :in => 0..100,  step: 0.1 %></div>
  </div>
<div class="control-group">
    <%= f.label :level , class: "control-label" %>
    <div class="controls"><%= f.number_field :level %></div>
  </div>
<div class="control-group">
    <%= f.label :xp , class: "control-label" %>
    <div class="controls"><%= f.number_field :xp%></div>
  </div>
<div class="control-group">
    <%= f.label :honor  , class: "control-label"%>
    <div class="controls"><%= f.number_field :honor %></div>
  </div>
<div class="control-group">
    <%= f.label :military , class: "control-label" %>
    <div class="controls"><%= f.number_field :military %></div>
  </div>
  <div class="control-group">
    <div class="controls">
      <div class="actions">
        <%= f.submit "Go"%>
      </div>
    </div>
  </div>
<% end %>
